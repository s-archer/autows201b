{
  "class": "AS3",
  "action": "deploy",
  "persist": true,
  "declaration": {
    "class": "ADC",
    "schemaVersion": "3.7.0",
    "id": "Telemetry_Components",
    "Common": {
      "Shared": {
        "class": "Application",
        "template": "shared",
        "telemetry_local_rule": {
          "remark": "Only required when TS is a local listener",
          "class": "iRule",
          "iRule": "when CLIENT_ACCEPTED {\n  node 127.0.0.1 6514\n}"
        },
        "telemetry_local": {
          "remark": "Only required when TS is a local listener",
          "class": "Service_TCP",
          "virtualAddresses": [
            "255.255.255.254"
          ],
          "virtualPort": 6514,
          "iRules": [
            "telemetry_local_rule"
          ]
        },
        "telemetry": {
          "class": "Pool",
          "members": [
            {
              "enable": true,
              "serverAddresses": [
                "255.255.255.254"
              ],
              "servicePort": 6514
            }
          ],
          "monitors": [
            {
              "bigip": "/Common/tcp"
            }
          ]
        },
        "telemetry_traffic_log_profile": {
          "class": "Traffic_Log_Profile",
          "requestSettings": {
            "requestEnabled": true,
            "requestProtocol": "mds-tcp",
            "requestPool": {
              "use": "telemetry"
            },
            "requestTemplate": "event_source=\"request_logging\",hostname=\"$BIGIP_HOSTNAME\",client_ip=\"$CLIENT_IP\",server_ip=\"$SERVER_IP\",http_method=\"$HTTP_METHOD\",http_uri=\"$HTTP_URI\",virtual_name=\"$VIRTUAL_NAME\",event_timestamp=\"$DATE_HTTP\""
          }
        }
      }
    }
  }
}
